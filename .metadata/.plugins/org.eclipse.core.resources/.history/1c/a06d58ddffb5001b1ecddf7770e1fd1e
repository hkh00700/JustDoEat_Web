<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/functions" prefix="fn" %>
<c:forEach items="${list}" var="vo" varStatus="status">
${status.index eq 0 ? '<hr>' : ''}
<div data-seq='${vo.id}'>${vo.name} [ ${vo.writedate} ]
	<c:if test="${loginInfo.id eq vo.writer}">
	<span>
		<a class='btn-fill-s btn-modify-save'>수정</a>
		<a class='btn-fill-s btn-delete-cancel'>삭제</a>
	</span>
	</c:if>
	<div class='original'>${fn: replace( fn:replace(vo.content, lf, '<br>') , crlf, '<br>')}</div>
	<div class='modify' style='display:none; margin-top:6px'></div>
</div>
<hr>
</c:forEach>
<script>
$('.btn-modify-save').on('click', function(){
	var $div = $(this).closest('div');
	
	if( $(this).text()=='수정' ){
		$div.children('.modify').css('height'
					, $div.children('.original').height()-6);
		//수정
		var tag = "<textarea style='resize:none; width:99%; height:90%'>"
				+ $div.children('div.original').html().replace(/<br>/g, '\n') 
				+ "</textarea>";
		$div.children('div.modify').html(tag);
		
		display($div, 'm');
	}else{
		
		$.ajax({
			type: 'post',
			url: 'board/comment/update',
			contentType: 'application/json',
			data: JSON.stringify( { id:$div.data('seq'), 
					content:$div.children('.modify').find('textarea').val() } ),
			success: function( response ){
				alert('댓글수정 ' + response);
				comment_list();
				
			},error: function(req, text){
				alert(text+':'+req.status);
			}
		});
	}
});

$('.btn-delete-cancel').on('click', function(){
	var $div = $(this).closest('div');
	
	if( $(this).text()=='취소' ){
		display($div, 'd');
	}else{
		if( confirm('정말 삭제?') ){
			$.ajax({
				url: 'board/comment/delete/' + $div.data('id'),
				success: function(){
					comment_list();
				},error: function(req, text){
					alert(text+':'+req.status);
				}
			});
		}
	}
});

function display($div, mode){
	//수정: 원글 안보이게, 수정글이 보이게, 저장/취소 버튼
	$div.children('div.modify').css('display', 
								mode=='m' ? 'block' : 'none');
	$div.children('div.original').css('display', 
								mode=='m' ? 'none' : 'block');
	$div.find('.btn-modify-save').text(mode=='m' ? '저장' : '수정');
	$div.find('.btn-delete-cancel').text(mode=='m' ? '취소' : '삭제');
}








</script>